generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donation {
  id        Int      @id @default(autoincrement())
  program   Program  @relation(fields: [programId], references: [id])
  programId Int
  amount    Int
  createdAt DateTime @default(now())
}

model Program {
  id         Int        @id @default(autoincrement())
  title      String
  target     Int
  collected  Int        @default(0)
  donations  Donation[]
}

